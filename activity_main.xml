<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WomenFlow App"
        android:textSize="32sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Cycle Phase Text -->
    <TextView
        android:id="@+id/cyclePhaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Phase: Follicular Phase"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Mood Advice Text -->
    <TextView
        android:id="@+id/moodAdviceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Advice: Keep spreading positivity!"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/cyclePhaseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Outfit Suggestion Text -->
    <TextView
        android:id="@+id/outfitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfit Suggestion: Wear a warm jacket and boots."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/moodAdviceText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Material Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Advice"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/outfitText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
